<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matching Game"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="15sp"
            android:gravity="center"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/image1"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/bp_logo"
            android:layout_marginTop="20dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/title"
            android:layout_marginStart="10dp"/>

        <ImageView
            android:id="@+id/image2"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/bp_logo"
            android:layout_toEndOf="@id/image1"
            android:layout_alignTop="@id/image1"
            android:layout_marginStart="7dp"/>

        <ImageView
            android:id="@+id/image3"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/bp_logo"
            android:layout_toEndOf="@id/image2"
            android:layout_alignTop="@id/image1"
            android:layout_marginStart="8dp"/>

        <ImageView
            android:id="@+id/image4"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/bp_logo"
            android:layout_below="@id/image1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"/>

        <ImageView
            android:id="@+id/image5"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/bp_logo"
            android:layout_below="@id/image2"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:layout_marginStart="142dp"/>

        <ImageView
            android:id="@+id/image6"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/bp_logo"
            android:layout_below="@id/image3"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:layout_marginStart="274dp"/>

        <ImageView
            android:id="@+id/image7"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/bp_logo"
            android:layout_below="@id/image4"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"/>

        <ImageView
            android:id="@+id/image8"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/bp_logo"
            android:layout_below="@id/image5"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:layout_marginStart="142dp"/>

        <ImageView
            android:id="@+id/image9"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/bp_logo"
            android:layout_below="@id/image6"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:layout_marginStart="274dp"/>

        <ImageView
            android:id="@+id/image10"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/bp_logo"
            android:layout_below="@id/image7"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"/>

        <ImageView
            android:id="@+id/image11"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/bp_logo"
            android:layout_below="@id/image8"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:layout_marginStart="142dp"/>

        <ImageView
            android:id="@+id/image12"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:src="@drawable/bp_logo"
            android:layout_below="@id/image9"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:layout_marginStart="274dp"/>

        <TextView
            android:id="@+id/textview_foundmatches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image11"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="20sp"
            android:text="Found matches: 0"/>

        <Button
            android:id="@+id/reset_btn"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:text="Reset Game"
            android:gravity="center"
            android:layout_marginTop="10sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textview_foundmatches"/>

    </RelativeLayout>