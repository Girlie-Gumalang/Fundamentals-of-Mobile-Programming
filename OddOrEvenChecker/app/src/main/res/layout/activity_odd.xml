<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".OddActivity">

    <TextView
        android:id="@+id/textView_odd_result"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Result"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/textView_odd"
        android:layout_below="@+id/textView_odd_result"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Odd Number!"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#E91E1E"/>

    <TextView
        android:id="@+id/display_odd"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_odd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Display odd"
        android:gravity="center"
        android:textSize="18sp" />

</RelativeLayout>