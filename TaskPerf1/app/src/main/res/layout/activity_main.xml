<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="wrap_content"
        android:layout_height="175dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/Logo" />

    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/logoImage"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="16dp"
        android:background="@color/cardview_light_background"
        android:textColor="#FFFFFF"
        android:hint="Search products..."
        android:padding="12dp" />

    <ImageView
        android:id="@+id/bookImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/searchBar"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/Books" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookImage"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:text="Books"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/phoneImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/bookImage"
        android:layout_marginStart="20dp"
        android:layout_marginTop="65dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/Smartphones" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/phoneImage"
        android:layout_marginTop="5dp"
        android:layout_marginStart="25dp"
        android:text="Smartphones"
        android:textSize="20sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/toysImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/searchBar"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="22dp"
        android:layout_toRightOf="@id/bookImage"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/Toys" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toysImage"
        android:layout_marginStart="240dp"
        android:layout_marginTop="10dp"
        android:text="Baby Toys"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/essentialImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/toysImage"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="65dp"
        android:layout_toRightOf="@id/phoneImage"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/Essentials" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/essentialImage"
        android:layout_marginTop="5dp"
        android:layout_marginStart="230dp"
        android:text="Travel Essentials"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnShopNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/essentialImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="SHOP NOW"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#236DA0" />

</RelativeLayout>